<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include('partials/head', { extraCss: ["/style/select_content.css",
    "/style/content.css",
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", 
    "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css",
 ] 
}) %>

<body>
    <main>
        <a href="/feed" class="btn back-button-select">
            <i class="bi bi-arrow-left"></i> Back
        </a>

        <section class="hero-section">
            <div class="hero-background"></div>
            <div class="container-fluid">
                <div class="hero-content">
                    <h1 id="content-title"></h1>
                    <div class="hero-meta my-3">
                        <span id="content-rating" class="border rounded px-2"></span>
                        <span id="content-type" class="border rounded px-2"></span>
                        <span id="content-year" class="border rounded px-2"></span>
                    </div>
                    <p id="content-description" class="hero-description d-none d-md-block"></p>
                    
                    <div class="hero-actions mt-4 d-flex">
                        <button class="btn btn-play" id="playButton">
                            <i class="bi bi-play-fill"></i> Play
                        </button>
                        <button id="watchAgainButton" class="btn btn-play" title="Watch Again" style="display: none;">
                            <i class="bi bi-play-circle-fill"></i> Watch Again
                        </button>
                        <button id="likeButton" class="btn btn-icon" title="Like" data-liked="false">
                            <i class="bi bi-heart"></i>
                        </button>
                        <button id="watchlistButton" class="btn btn-icon" title="Add to My List">
                            <i class="bi bi-plus"></i>
                        </button>
                        <button id="playFromBeginningButton" class="btn btn-icon" title="Play from Beginning">
                            <i class="bi bi-arrow-counterclockwise"></i>
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <section class="details-section container-fluid mt-4">
            <div class="row">
                <div id="episodes-section" class="col-12">
                    </div>
                <div id="details-cast-genres" class="col-12">
                   <p><strong>Cast:</strong> <span id="content-cast"></span></p>
                   <p><strong>Genres:</strong> <span id="content-genres"></span></p>
                </div>
            </div>
            <aside class="mt-5">
                <h3 class="mb-3">More Like This</h3>
                <section id="similar-content-container" class="row-section">
                    </section>
            </aside>
        </section>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/likes_manager.js"></script>
    <script src="/scripts/watchlist_manager.js"></script>
    <script src="/scripts/card_renderer.js"></script>
    <script src="/scripts/select_content.js"></script>
</body>
</html>