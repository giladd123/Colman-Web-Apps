<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include('partials/head', { extraCss: [ "/style/navbar.css",
  "/style/dropdown.css", "/style/main_menu.css", "/style/form_styles.css" ] })
  %>

  <body>
    <%- include('partials/navbar', { activeNav: 'admin' }) %>
    <div class="login-container">
      <div class="login-form">
        <h2 class="text-white mb-4">
          <%= message || 'Content deleted successfully!' %>
        </h2>
        <p style="text-align: center; color: #ccc; margin-top: 1rem">
          <% if (title && title.trim()) { %> <%= type || 'Content' %> "<%= title
          %>" has been removed. <% } else { %> The selected content has been
          removed. <% } %>
        </p>

        <div
          style="
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-top: 2rem;
          "
        >
          <a href="/feed" class="btn-primary">Return to Feed</a>
          <a href="/admin/edit" class="btn-secondary">Manage More Content</a>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/login_handler.js"></script>
    <script src="/scripts/utils.js"></script>
    <script src="/scripts/init.js"></script>
    <script src="/scripts/admin_init.js"></script>
  </body>
</html>
